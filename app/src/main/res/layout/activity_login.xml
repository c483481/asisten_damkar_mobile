<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="model"
            type="com.example.asisten_damkar.view_model.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoginActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asisten Damkar"
            android:fontFamily="@font/poppins_bold"
            android:textSize="60dp"
            android:textAlignment="center"
            android:paddingTop="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="8dp"
                />
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@={model.username}"
                android:hint="@string/username"
                android:textSize="15dp"
                android:inputType="textEmailAddress"
                android:autofillHints=""
                android:background="@drawable/card"
                android:elevation="10dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/err_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username Tidak Valid"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_marginBottom="@dimen/_10sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="8dp"
                />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/password"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:text="@={model.password}"
                android:layout_marginBottom="@dimen/_10sdp"
                android:autofillHints=""
                android:background="@drawable/card"
                android:elevation="10dp"
                android:paddingLeft="15dp"
                />
            <TextView
                android:id="@+id/err_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:visibility="invisible"
                android:text="Password Tidak Valid"
                android:textColor="@color/red"
                android:layout_marginBottom="@dimen/_10sdp"
                />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            android:layout_marginHorizontal="20dp"
            android:onClick="@{model::onClickLoginButton}"
            android:text="@string/login"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            android:background="@drawable/card"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>