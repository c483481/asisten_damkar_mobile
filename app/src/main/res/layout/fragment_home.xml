<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    
    <data>
        <variable
            name="model"
            type="com.example.asisten_damkar.view_model.HomeViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.HomeFragment">
        <ProgressBar
            android:id="@+id/progress_bar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asisten Damkar"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="Masukkan alamat kebakaran untuk memulai pencarian pos terdekat dan ketersediaan truk :"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fitur Lainnya"
            android:layout_marginTop="35dp"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/description"
            />
        <LinearLayout
            android:id="@+id/iconFeature"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/subTitle">

            <androidx.cardview.widget.CardView
                android:id="@+id/titik_kebaran"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="3dp"
                android:layout_gravity="fill"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/_8sdp"
                android:onClick="@{model::onTitikKebakaranClick}"
                >
                    <LinearLayout
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_fire_place"
                            />

                        <TextView
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titik"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebakaran"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/tracking_pos"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="@dimen/_8sdp"
                android:onClick="@{model::onTrackingPosClick}"
                >
                <LinearLayout
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_tracing_pos"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tracking"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pos"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aktivitas sedang berjalan"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/iconFeature"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_constraintTop_toBottomOf="@+id/iconFeature">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler_view"
            android:layout_width="370dp"
            android:layout_height="732dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="120dp"

            tools:layout_editor_absoluteX="21dp"
            tools:listitem="@layout/adapter_fire_location_detail" /></ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>